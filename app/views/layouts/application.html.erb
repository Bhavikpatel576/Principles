<!DOCTYPE html>
<html>
  <head>
    <title>Our Principles</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <div class='nav'>
          <ul class="">
            <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
            <li class="nav-item"> <a class="nav-link" href="/#About">About</a></li>
            <li class="nav-item"> <a class="nav-link disabled" href="/#Contact">Contact</a></li>
            <% if signed_in? %>
              <li class="nav-item"><%= link_to 'Sign out', sign_out_path, method: :delete, :form_class=>"nav-link" %></li>
              <li class="nav-item"> <span class="navbar-text"> Signed in as: <%= current_user.email %> </span></li> 
            <% else %>
              <li class="nav-item"><%= link_to 'Sign in', sign_in_path, { :class=>"nav-link" } %> </li>
            <% end %>
            <li class="nav-item"><%= render "search" %></li>
          </ul>
        </div>
    </header>
        <div id="flash">
          <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
          <% end %>
        </div>

        <%= yield %>
  </body>
</html>
